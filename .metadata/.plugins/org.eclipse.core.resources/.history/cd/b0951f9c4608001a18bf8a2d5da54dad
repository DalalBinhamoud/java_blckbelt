// Variable font - Hepta Slab ////////
@import url("https://fonts.googleapis.com/css2?family=Hepta+Slab:wght@1..900&display=swap");

// Fullscreen Nav /////////////
.nav {
    // Play with these options
    $slideSpeed: 0.5s;
    $slideStagger: 0.1s;
    $fontSize: 5vh;
    $cornerRadii: 40em;
    $linkMargins: 0.1em 20vw;
    $topBottomMargins: 10vh;

    // Keep this nav item number current for the stagger delays to work correctly
    $links: 5;

    position: absolute;
    z-index: 998;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    visibility: hidden;
    transition-property: visibility;

    .navList {
        width: 100%;
        height: 100%;
        display: flex;
        transition: all 1s;
        flex-direction: column;
    }
    


    .navList a {
        margin: $linkMargins;
        display: block;
        text-decoration: none;
        color: #ffffff88;
        letter-spacing: 1px;
        position: relative;
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100%;
        box-shadow: 10px 10px 20px #000;
        transition: transform $slideSpeed cubic-bezier(0.15, 0.1, 0.25, 1.1);
        background-color: #222;

        span {
            position: absolute;
            animation: textBG 10s infinite;
            font-size: $fontSize;
            font-variation-settings: "wght" 900;
            // font-variation-settings: "wdth" 100;
            transition: all 0.2s;
            padding: 5px;
            margin: 0 auto;
            display: inline-block;
            background: linear-gradient(
                -45deg,
                #8ab9ff 10%,
                #4567b2 25%,
                #8ab9ff 40%,
                #4567b2 55%,
                #8ab9ff 70%,
                #4567b2 85%
            );
            background-size: 400%;
            background-clip: text;
            -webkit-text-fill-color: transparent;
            -webkit-backface-visibility: hidden;
        }

        @for $i from 0 through $links {
            &:nth-child(#{$i + 1}) span {
                animation-delay: $i * $slideStagger;
            }
        }

        &:hover {
            background-color: #252525;
            span {
                font-size: 7vh;
                animation: pulse 2s infinite;
                @keyframes pulse {
                    50% { 
                        font-variation-settings: "wght" 400;
                        // font-variation-settings: "wdth" 85;
                    }
                }
            }
        }
        &:active {
            background-color: #2f2f2f;
        }
        &:first-child {
            margin-top: $topBottomMargins;
        }
        &:last-child {
            margin-bottom: $topBottomMargins;
        }

        @for $i from 0 through $links {
            &:nth-child(#{$i + 1}) {
                transition-delay: $i * $slideStagger;
            }
        }
        // Uncomment/Comment these lines for different effects
        &:nth-child(odd) {
            // transform: translatex(-150%) rotate(50deg);
            transform: translatex(-150vw);
            border-bottom-left-radius: $cornerRadii;
            border-top-right-radius: $cornerRadii;
        }

        &:nth-child(even) {
            // transform: translatex(150%) rotate(-50deg);
            transform: translatex(150vw);
            border-top-left-radius: $cornerRadii;
            border-bottom-right-radius: $cornerRadii;
        }
    }
    // active -----------------------------
    &.active {
        visibility: visible;
        .navList a {
            opacity: 1;
            transform: translatex(0vw);
        }
    }
}

// Nav Toggle /////////////
.nav-toggle {
    position: fixed;
    z-index: 999;
    cursor: pointer;
    top: 2vw;
    right: 2vw;
    width: 70px;
    height: 70px;
    overflow: hidden;
    transform: rotate(35deg);
    transition: all 0.2s;
    &:hover {
        transform: rotate(15deg);
        &::after {
            width: 30%;
            transform: translate(-104%, 20px) rotate(-120deg);
        }
        &::before {
            width: 30%;
            transform: translate(-33%, 22px) rotate(140deg);
        }
    }
    &:before,
    &:after,
    & span {
        opacity: 0.8;
        position: absolute;
        top: 50%;
        left: 50%;
        width: 90%;
        height: 2px;
        border-radius: 50%;
        background: goldenrod;
        transform: translate(-50%, -50%) rotate(-80deg);
        transition: all 0.2s;
    }
    &:hover::before,
    &:hover::after,
    &:hover span {
        opacity: 1;
        background: goldenrod;
    }
    &:before,
    &:after {
        content: "";
    }
    &:before {
        width: 30%;
        transform: translate(17%, -1px) rotate(100deg);
    }
    &:after {
        width: 50%;
        transform: translate(-90%, 5px) rotate(-80deg);
    }
    & .point {
        width: 50%;
        transform: translate(-10%, -1px) rotate(-45deg);
    }
    &.open:before,
    &.open:after,
    &.open span {
        transition: -webkit-transform 0.5s, -moz-transform 0.5s,
            -o-transform 0.5s, transform 0.5s, opacity 0.1s, width 0.5s;
    }
    &.open span {
        opacity: 0;
        transform: translate(50%, -50px) rotate(-45deg);
    }
    &.open:before {
        width: 75%;
        transform: translate(-50%, -50%) rotate(125deg);
    }
    &.open:after {
        width: 60%;
        transform: translate(-50%, -50%) rotate(35deg);
    }
}

// Animations ////////////
@keyframes morph {
    0% {
        font-variation-settings: "wght" 500;
    }
    50% {
        font-variation-settings: "wght" 900;
    }
    100% {
        font-variation-settings: "wght" 500;
    }
}

@keyframes textBG {
    50% {
        background-position: 100% 50%;
    }
}

